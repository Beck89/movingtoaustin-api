# ===========================================
# MLS Grid API Configuration
# ===========================================
MLS_BASE=https://api.mlsgrid.com/v2
MLS_ACCESS_TOKEN=your_bearer_token_here
ORIGINATING_SYSTEM=actris

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=ChangeThisSecurePassword123!
POSTGRES_DB=mls
POSTGRES_PORT=5433

# ===========================================
# Meilisearch Configuration
# ===========================================
MEILI_ENV=production
MEILI_MASTER_KEY=ChangeThisToASecureKey123!
MEILI_INDEX=listings_actris_v1
MEILI_PORT=7700
MEILI_NO_ANALYTICS=true

# ===========================================
# API Configuration
# ===========================================
API_PORT=3000
API_HOST=0.0.0.0

# ===========================================
# ETL Configuration
# ===========================================
ETL_INTERVAL_MINUTES=5
ETL_BATCH_SIZE=100
ETL_MAX_RETRIES=3

# Optional: Limit records for development/testing (omit for production)
# ETL_MAX_PROPERTIES=100
# ETL_MAX_MEMBERS=5
# ETL_MAX_OFFICES=5
# ETL_MAX_OPENHOUSES=5

# Optional: Reset database on ETL startup (useful for development)
# WARNING: This will DELETE ALL DATA and re-sync from scratch
# ETL_RESET_ON_START=false

# ===========================================
# Object Storage - Optional (for hosting media)
# ===========================================
# Without this, media URLs will point to MLS Grid (may expire)
# With this, media is downloaded and hosted on your CDN (permanent)

# DigitalOcean Spaces (Recommended - $5/month, includes CDN)
# Get credentials from: https://cloud.digitalocean.com/account/api/spaces
# S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
# S3_REGION=nyc3
# S3_BUCKET=mls-listing-media
# S3_ACCESS_KEY_ID=DO00ABC123XYZ456...
# S3_SECRET_ACCESS_KEY=abc123xyz456def789...
# CDN_BASE_URL=https://mls-listing-media.nyc3.cdn.digitaloceanspaces.com

# Environment prefix (separates local/production data in same bucket)
# Use "production" for production, "local" for local development
# STORAGE_PREFIX=production

# Cloudflare R2 (Alternative - pay per GB, no egress fees)
# S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# S3_REGION=auto
# S3_BUCKET=mls-listing-media
# S3_ACCESS_KEY_ID=your_r2_access_key
# S3_SECRET_ACCESS_KEY=your_r2_secret_key
# CDN_BASE_URL=https://your-custom-domain.com

# AWS S3 (Alternative - most expensive)
# S3_ENDPOINT=https://s3.us-east-1.amazonaws.com
# S3_REGION=us-east-1
# S3_BUCKET=mls-listing-media
# S3_ACCESS_KEY_ID=your_aws_access_key
# S3_SECRET_ACCESS_KEY=your_aws_secret_key
# CDN_BASE_URL=https://your-cloudfront-domain.cloudfront.net

# ===========================================
# Test Import Configuration
# ===========================================
TEST_LIMIT=10