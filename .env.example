# ===========================================
# MLS Grid API Configuration
# ===========================================
MLS_BASE=https://api.mlsgrid.com/v2
MLS_ACCESS_TOKEN=your_bearer_token_here
ORIGINATING_SYSTEM=actris

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=ChangeThisSecurePassword123!
POSTGRES_DB=mls
POSTGRES_PORT=5433

# ===========================================
# Meilisearch Configuration
# ===========================================
MEILI_ENV=production
MEILI_MASTER_KEY=ChangeThisToASecureKey123!
MEILI_INDEX=listings_actris_v1
MEILI_PORT=7700
MEILI_NO_ANALYTICS=true

# ===========================================
# API Configuration
# ===========================================
API_PORT=3000
API_HOST=0.0.0.0

# ===========================================
# ETL Configuration
# ===========================================
ETL_INTERVAL_MINUTES=5
ETL_BATCH_SIZE=100
ETL_MAX_RETRIES=3

# ===========================================
# Object Storage (S3/R2) - Optional
